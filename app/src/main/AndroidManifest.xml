<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.se328_project">
    <!-- Request Internet connection -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Request to check Internet connection state -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SE328_Project"
        android:usesCleartextTraffic="true">
        <activity android:name=".DetailedWeather"></activity>
        <activity android:name=".ChangeCity" />
        <activity android:name=".SQLiteList" />
        <activity android:name=".Weather" />
        <activity android:name=".Search" />
        <activity android:name=".Delete" />
        <activity android:name=".Update" />
        <activity android:name=".Insert" />
        <activity android:name=".FirebaseList" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>